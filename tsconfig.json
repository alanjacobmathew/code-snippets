{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "skipLibCheck": false,
        "jsx": "react"
    },
    "include": [
        "js",
        "config",
        "scripts",
        ".eslintrc.js",
        "webpack.config.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "files": true,
        "require": [
            "tsconfig-paths/register"
        ]
    }
}
